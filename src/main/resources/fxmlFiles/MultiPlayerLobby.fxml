<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="20" style="-fx-background-color: #323437; -fx-padding: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MultiPlayerLobbyController">

   <Label style="-fx-font-family: 'Roboto Mono'; -fx-font-size: 28px; -fx-text-fill: #e2b714; -fx-font-weight: bold;" text="LOBBY" />

   <VBox alignment="CENTER" maxHeight="400.0" maxWidth="350.0" prefHeight="400.0" prefWidth="350.0" spacing="15" style="-fx-background-color: #2c2e31; -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 350;">
      <HBox alignment="CENTER" spacing="10">
         <Label fx:id="hostIndicator" style="-fx-font-family: 'Roboto Mono'; -fx-text-fill: #e2b714; -fx-font-size: 16px;" />
         <Label fx:id="statusLabel" style="-fx-font-family: 'Roboto Mono'; -fx-text-fill: #d1d0c5; -fx-font-size: 16px;" />
      </HBox>

      <ListView fx:id="playerListView" style="-fx-font-family: 'Roboto Mono'; -fx-background-color: #3a3d42; -fx-text-fill: #d1d0c5; -fx-control-inner-background: #3a3d42; -fx-pref-height: 200; -fx-min-width: 300;" />
      <HBox alignment="TOP_CENTER" prefHeight="41.0" prefWidth="310.0">
         <children>
            <Button fx:id="fortySecondButton" alignment="CENTER" mnemonicParsing="false" onAction="#onFortyClick" style="-fx-font-family: 'Roboto Mono'; -fx-background-color: #e2b714; -fx-text-fill: #323437; -fx-font-weight: bold; -fx-font-size: 16px; -fx-min-width: 80;" text="40s">
               <HBox.margin>
                  <Insets left="15.0" right="10.0" top="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="sixtySecondButton" alignment="CENTER" mnemonicParsing="false" onAction="#onSixtyClick" style="-fx-font-family: 'Roboto Mono'; -fx-background-color: #e2b714; -fx-text-fill: #323437; -fx-font-weight: bold; -fx-font-size: 16px; -fx-min-width: 80;" text="60s">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="ninetySecondButton" alignment="CENTER" mnemonicParsing="false" onAction="#onNinetyClick" style="-fx-font-family: 'Roboto Mono'; -fx-background-color: #e2b714; -fx-text-fill: #323437; -fx-font-weight: bold; -fx-font-size: 16px; -fx-min-width: 80;" text="90s">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="13.0" prefWidth="310.0">
         <children>
            <Label fx:id="warningLabel" alignment="CENTER" prefHeight="17.0" prefWidth="317.0" style="-fx-font-family: 'Roboto Mono'; -fx-text-fill: #323437; -fx-font-size: 16px; -fx-min-width: 150;" textFill="#d00515" />
         </children>
      </HBox>
   </VBox>

   <Button fx:id="startButton" onAction="#handleStartGame" style="-fx-font-family: 'Roboto Mono'; -fx-background-color: #e2b714; -fx-text-fill: #323437; -fx-font-weight: bold; -fx-font-size: 16px; -fx-min-width: 150;" text="START RACE" />
   <Label fx:id="escText" alignment="CENTER" contentDisplay="CENTER" prefHeight="19.0" prefWidth="217.0" text="Press esc to go back to main menu" />
   <HBox prefHeight="18.0" prefWidth="350.0">
      <children>
         <Button fx:id="backButton" mnemonicParsing="false" text="Button" />
      </children>
   </HBox>
</VBox>
