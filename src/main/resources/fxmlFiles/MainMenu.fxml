<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400" prefWidth="600" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainMenuController">  <!-- adjust path if needed -->

   <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">
      <Text styleClass="title-text" text="Type Racer" textAlignment="CENTER">
         <font>
            <Font size="40.0" />
         </font>
      </Text>

      <VBox alignment="CENTER" spacing="10">
         <Button styleClass="menu-button" text="Multiplayer" />
         <Button fx:id="singlePlayerButton" onAction="#onSinglePlayerClick" styleClass="menu-button" text="Singleplayer" />
         <Button fx:id="exitButton" onAction="#onExitClick" styleClass="menu-button" text="Exit" />
      </VBox>
   </VBox>

</AnchorPane>
